{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"types": ["jest", "@types/testing-library__jest-dom"],
		"paths": {
			"@/*": ["./*"],

			"@const": ["./constants/index"],
			"@const/*": ["./constants/*"],

			"@components": ["./components/index"],
			"@components/*": ["./components/*"],

			"@specific/*": ["./components/specific/*"],
			"@specific": ["./components/specific/index"],

			"@general/*": ["./components/general/*"],
			"@general": ["./components/general/index"],

			"@context/*": ["./context/*"],
			"@context": ["./context"],

			"@pages/*": ["./pages/*"],

			"@public": ["./public/index"],
			"@public/*": ["./public/*"],

			"@types": ["./types/index", "../types"],
			"@types/*": ["./types/*"],

			"@utils": ["./utils/index"],
			"@utils/*": ["./utils/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next-additional.d.ts"],
	"exclude": ["node_modules", "cypress", "__mocks__", "/email-server", "cypress.config.ts"]
}
